{
  "extends": "./tsconfig.node20.json",
  "compilerOptions": {
    "module": "esnext",
    "outDir": "./dist",
    "baseUrl": ".",
    "sourceMap": true,
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "paths": {
      "@core/*": ["src/core/*"],
      "@middlewares/*": ["src/middlewares/*"],
      "@commands/*": ["src/commands/*"],
      "@models/*": ["src/models/*"],
      "@services/*": ["src/services/*"]
    }
  },
  "include": ["./src/**/*", "env.d.ts"]
}
